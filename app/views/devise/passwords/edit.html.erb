<% provide :title, 'Изменение пароля' %>

<div class="row align-center">
  <div class="small-12 medium-6 columns">
    <div class="callout large auth">
      <h2>Изменение пароля</h2>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name),
                             html: { method: :put }) do |f| %>
        <%= devise_error_messages! %>
        <%= f.hidden_field :reset_password_token %>

        <div class="row">
          <fieldset class="small-12 columns">
            <%= f.password_field :password, autocomplete: 'off',
                                 placeholder: 'Новый пароль', required: true %>
            <% if @minimum_password_length %>
              <p class="help-text">Минимум <%= @minimum_password_length %> символов</p>
            <% end %>
          </fieldset>
        </div>

        <div class="row">
          <fieldset class="small-12 columns">
            <%= f.password_field :password_confirmation, autocomplete: 'off',
                                 placeholder: 'Подтвердите новый пароль', required: true %>
          </fieldset>
        </div>

        <div class="row">
          <fieldset class="small-12 columns">
            <%= f.submit 'Изменить пароль', class: 'expanded button' %>
          </fieldset>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
