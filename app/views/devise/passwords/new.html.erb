<% provide :title, 'Восстановление пароля' %>

<div class="row align-center">
  <div class="small-12 medium-6 columns">
    <div class="callout large auth">
      <h2>Восстановление пароля</h2>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name),
                             html: { method: :post }) do |f| %>
        <%= devise_error_messages! %>

        <div class="row">
          <fieldset class="small-12 columns">
            <%= f.email_field :email, autofocus: true, placeholder: 'E-mail',
                              required: true %>
          </fieldset>
        </div>

        <div class="row">
          <fieldset class="small-12 columns">
            <%= f.submit 'Восстановить пароль', class: 'expanded button' %>
          </fieldset>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
