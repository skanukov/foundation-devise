<% provide :title, 'Редактирование аккаунта' %>

<div class="row align-center">
  <div class="small-12 medium-6 columns">
    <div class="callout large auth">
      <h2>Редактирование аккаунта</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name),
                             html: { method: :put }) do |f| %>
        <%= devise_error_messages! %>

        <div class="row">
          <fieldset class="small-12 columns">
            <%= f.email_field :email, autofocus: true, placeholder: 'E-mail',
                              required: true %>
            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <p class="help-text">Ожидается подтверждение аккаунта для: <%= resource.unconfirmed_email %></p>
            <% end %>
          </fieldset>
        </div>

        <div class="row">
          <fieldset class="small-12 columns">
            <%= f.password_field :password, autocomplete: 'off',
                  placeholder: 'Новый пароль (оставьте пустым, если не хотите менять пароль)' %>
            <% if @minimum_password_length %>
              <p class="help-text">Минимум <%= @minimum_password_length %> символов</p>
            <% end %>
          </fieldset>
        </div>

        <div class="row">
          <fieldset class="small-12 columns">
            <%= f.password_field :password_confirmation, autocomplete: 'off',
                                 placeholder: 'Подтвердите новый пароль' %>
          </fieldset>
        </div>

        <div class="row">
          <fieldset class="small-12 columns">
            <%= f.password_field :current_password, autocomplete: 'off',
                                 placeholder: 'Ваш текущий пароль', required: true %>
          </fieldset>
        </div>

        <div class="row">
          <fieldset class="small-12 columns">
            <%= f.submit 'Обновить', class: 'expanded large success button' %>
          </fieldset>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

<div class="row align-center">
  <div class="small-12 medium-6 columns">
    <div class="callout">
      <h3>Удаление аккаунта</h3>
      <p>Хотите попрощаться с нами?</p>
      <%= button_to "Удалить мой аккаунт", registration_path(resource_name),
            class: 'button alert', data: { confirm: "Вы уверены?" }, method: :delete %>

      <%= link_to 'Назад', :back %>
    </div>
  </div>
</div>
