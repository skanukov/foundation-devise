<% provide :title, 'Регистрация' %>

<div class="row align-center">
  <div class="small-12 medium-6 columns">
    <div class="callout large auth">
      <h2>Регистрация</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <div class="row">
          <fieldset class="small-12 columns">
            <%= f.email_field :email, autofocus: true, placeholder: 'E-mail',
                              required: true %>
          </fieldset>
        </div>

        <div class="row">
          <fieldset class="small-12 columns">
            <%= f.password_field :password, autocomplete: 'off',
                                 placeholder: 'Пароль', required: true %>
            <% if @minimum_password_length %>
              <p class="help-text">Минимум <%= @minimum_password_length %> символов</p>
            <% end %>
          </fieldset>
        </div>

        <div class="row">
          <fieldset class="small-12 columns">
            <%= f.password_field :password_confirmation, autocomplete: 'off',
                                 placeholder: 'Подтвердите пароль', required: true %>
          </fieldset>
        </div>

        <div class="row">
          <fieldset class="small-12 columns">
            <%= f.submit 'Войти', class: 'expanded large success button' %>
          </fieldset>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
